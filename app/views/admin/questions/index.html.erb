<h2>Soruların Listesi</h2>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Yeni soru Oluştur', new_admin_question_path, class: 'btn btn-outline-primary' %>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input name="query" value="<%= params[:query] %>" class="form-control mr-sm-2" type="search" placeholder="Soru Arama" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ara</button>
    </form>
  </div>
</nav>

<br />

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Soru</th>
      <th>İşlemler</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td>
          <%= link_to 'Düzenle', edit_admin_question_path(question.id) %>
          |
          <%= link_to 'Sil', admin_question_path(question.id), method: :delete, data: { confirm: 'Emin misiniz?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
